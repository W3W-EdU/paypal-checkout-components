{
  "name": "@paypal/checkout-components",
  "version": "5.0.335",
  "description": "PayPal Checkout components, for integrating checkout products.",
  "main": "index.js",
  "scripts": {
    "build": "nx run-many -t build --exclude @paypal/checkout-components --verbose",
    "cc:build": "nx build checkout-components",
    "cc:test": "npm run test -w checkout-components",
    "clean": "npm exec -ws -- npx rimraf node_modules && npx rimraf node_modules",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check .",
    "hb:build": "nx build hosted-buttons",
    "hb:test": "nx test hosted-buttons",
    "lint": "eslint --ext .js --ext .jsx packages/**/src/ packages/**/test/ *.js",
    "prepare": "husky install",
    "test": "nx run-many -t test --exclude @paypal/checkout-components --verbose"
  },
  "browserslist": [
    "IE >= 9",
    "chrome >= 27",
    "firefox >= 30",
    "safari >= 5",
    "opera >= 23"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/paypal/paypal-checkout-components.git"
  },
  "homepage": "https://developer.paypal.com/",
  "keywords": [
    "cross-domain",
    "cross domain",
    "components",
    "component",
    "krakenjs",
    "kraken"
  ],
  "license": "Apache-2.0",
  "readmeFilename": "README.md",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "nx": {},
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "husky": "^7.0.4"
  },
  "devDependencies": {
    "@bunchtogether/vite-plugin-flow": "^1.0.2",
    "@krakenjs/eslint-config-grumbler": "^8.2.0",
    "@krakenjs/grumbler-scripts": "^8.1.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unicorn": "^55.0.0",
    "flow-bin": "0.155.0",
    "flow-typed": "^3.8.0",
    "hosted-buttons": "^1.0.0",
    "nx": "19.6.2",
    "vite": "^5.4.3"
  }
}
